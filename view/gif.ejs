<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sorry! 在线生成(node版)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/w3.css" />
    <!-- your code -->
</head>

<body>
    <!-- Sidebar -->
    <div id="sidebar" class="w3-sidebar w3-bar-block w3-border-right" style="display:none">
        <button id="sidebar_close" class="w3-bar-item w3-large">&times;</button>
        <a href="/" class="w3-bar-item w3-button">首页</a>
        <% templates.forEach(template=>{ %>
         <a href="/gif/<%= template.name %>.html" class="w3-bar-item w3-button"><%= template.title %></a>
        <% }) %>
    </div>

    <!-- Show Button -->
    <div class="w3-center">
      <button id="show_sidebar" class="w3-btn w3-circle w3-text-black w3-white w3-xlarge w3-display-topleft">☰</button>
      <h3 class="w3-text-blue w3-center w3-show-inline-block">生成<%= template.title %>gif</h3>

      <a class="w3-display-topright w3-btn" href="https://github.com/lipinghai/node-sorry" target="_blank">
        <svg aria-hidden="true" class="w3-opacity" height="43" version="1.1" viewBox="0 0 16 16" width="24">
          <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
        </svg>
      </a>
    </div>

    <!-- Main Frame -->
    <div class="w3-container w3-display-container w3-half">
        <div class="w3-container">
            <img src="/template/<%= template.name %>/sample.gif" style="width:100%">
        </div>
        <div class="w3-container">
        <% template.defaultDialogue.forEach(function(dialogue, index){ %>
          <%- include('./dialogue', {dialogue, index: index+1}) %>
        <% }); %>
        
        <p>
          <button id="submit_btn" onclick="submit('<%= template.name %>')" class="w3-btn w3-blue">生成</button>
          <span id="result" class="w3-margin-left"></span>
        </p>
        </div>
    </div>
    <script src="/cookies.js"></script>
    <script src="/main.js"></script>
</body>

</html>
